!!!
%html
  %head
    %title Tabu
    = stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true
    = javascript_include_tag "application", "data-turbolinks-track" => true
    = csrf_meta_tags
  %body
    %nav.navbar.navbar-default.navbar-fixed-top
      .container
        .navbar-header
          %button.btn.btn-success.navbar-toggle{"data-target" => ".navbar-collapse", "data-toggle" => "collapse"}
            %i.fa.fa-chevron-down
          = link_to "Tabu", root_path, class: "navbar-brand" 
        .navbar-collapse.collapse
          %ul.nav.navbar-nav
            %li= link_to "About", "#"
            %li= link_to "Contact", "#"
          %ul.nav.navbar-nav.navbar-right
            - if admin_signed_in?
              %li.dropdown
                %li= link_to "Create Card", new_card_path
              %li.dropdown
                = link_to "#{current_admin.email} <b class='caret'></b>".html_safe, "#", class: "dropdown-toggle", data: {toggle: "dropdown"}
                %ul.dropdown-menu
                  %li= link_to "Edit Profile", edit_admin_registration_path      
                  %li= link_to "Sign Out", destroy_admin_session_path, method: :delete           
            - else
              %li= link_to "Sign Up", new_admin_registration_path
              %li= link_to "Sign In", new_admin_session_path
    .container
      .col-lg-12
        = yield
